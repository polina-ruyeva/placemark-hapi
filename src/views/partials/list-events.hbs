<table class="table is-fullwidth">
    <thead>
    <tr>
        <th>Event</th>
        <th>Description</th>
        <th>Longitude</th>
        <th>Latitude</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>
    {{#each category.events}}
        <tr>
            <td>
                {{name}}
            </td>
            <td>
                {{description}}
            </td>
            <td>
                {{lon}}
            </td>
            <td>
                {{lat}}
            </td>
            <td>
                {{date}}
            </td>
            <td>
                <a href="/event/{{_id}}" class="iu icon button">
                    <i class="fas fa-folder-open"></i>
                </a>
                <a href="/category/{{../category._id}}/deleteevent/{{_id}}" class="ui icon button">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
